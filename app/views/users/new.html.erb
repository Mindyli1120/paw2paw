<div class="main">
	<div class="container">
		<div class="row-scroll">
            <div class="col-sm-5 col-sm-offset-1 mb-sm-40">
                <h4 class="font-alt">Register</h4>
                <hr class="divider-w mb-10">
                
                <%= form_for :user, url: '/users', class: "form" do |form| %>

                <div class="form-group">
                    <%= form.label :first_name do %>
                    <i class="fa fa-id-badge" aria-hidden="true"></i>
                    First Name
                    <% end %>
                    <%= form.text_field :first_name, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.label :last_name do %>
                    <i class="fa fa-id-badge" aria-hidden="true"></i>
                    Last Name
                    <% end %>
                    <%= form.text_field :last_name, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.label :email do %>
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    Email
                    <% end %>
                    <%= form.text_field :email, class: 'form-control' %>
                </div>
            
                <div class="form-group">
                    <%= form.label :password do %>
                    <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                    Password
                    <% end %>
                    <%= form.password_field :password, class: 'form-control' %>
                </div>
            
                <div class="form-group">
                    <%= form.label :password_confirmation do %>
                    <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                    Password Confirmation
                    <% end %>
                    <%= form.password_field :password_confirmation, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.label :avatar do %>
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Avatar
                    <% end %>
                    <%= form.text_field :avatar, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.submit 'Register', class: 'btn btn-block btn-round btn-b' %>
                </div>

                <% end %>
            </div>
		</div>
	</div>
</div>

