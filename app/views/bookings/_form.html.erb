<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
        <%= form_for :booking, url: sitter_bookings_path(params[:sitter_id]) do |form| %>

          <div class="form-group">
            <%= form.label :name %>
            <% if current_user %>
            <%= form.text_field :name , :value => "#{@user.first_name} #{@user.last_name}", class: 'form-control' %>
            <% else %>
            <%= form.text_field :name , :value => params[:name], class: 'form-control' %>
            <% end %>
          </div> 
          <%= form.submit 'Submit', class: 'btn btn-primary' %>
        <% end %>
      </div>
      <script> ReactRailsUJS.mountComponents()</script>
        <div class="DayPicker" lang="en">
          <%= react_component('Booking', {dates: @dates}, {prerender: true}) %>
        </div> 
    </div>
  </div>
</div>