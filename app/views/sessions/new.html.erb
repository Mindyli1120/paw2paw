<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-1">

				<%= form_for :session, url: '/login' do |form| %>
					<div class="form-group">
						<%= form.label :email %> <br>
						<%= text_field_tag :email%>
					</div>

					<div class="form-group">
						<%= form.label :password %> <br>
						<%= password_field_tag :password %>
					</div>

				<%= form.submit 'Login', class: 'btn btn-primary' %>
				<% end %>
	
			</div>
		</div>
	</div>
</div>