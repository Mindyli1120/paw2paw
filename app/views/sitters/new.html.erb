<div class="main">
  <div class="container">
    <div class="row-scroll">
        <div class="col-sm-5 col-sm-offset-1 mb-sm-40">
            <h4 class="font-alt">Become A Sitter</h4>
            <hr class="divider-w mb-10">     

            <%= form_for :sitter, url: '/sitters', class: "form" do |form| %>

            <div>
              <% if @sitter.errors.any? %>
                <div class="alert alert-danger" role="alert"> 
                <button class="close" type="button" data-dismiss="alert" aria-hidden="true">x</button>
                <% @sitter.errors.full_messages.each do |error| %>
                    <div>
                    <i class="fa fa-cog fa-spin"></i>
                    <strong>Alert!</strong>
                    <%= error %>
                    </div>
                <% end %>
                </div>
              <% end %>
            </div>

            <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name , :value => "#{@user.first_name} #{@user.last_name}", class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :address %>
                <%= form.text_field :address, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :summary %>
                <%= form.text_area :summary, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :rules %>
                <%= form.text_area :rules, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :price %>
                <%= form.text_field :price, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.submit 'Next', class: 'btn btn-block btn-round btn-b' %>
            </div>
            
            <% end %>
      </div>
    </div>
  </div>
</div>