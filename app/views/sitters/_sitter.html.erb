<article class="sitter">
  <%= link_to sitter do %>
  <div>    
    <ul class="text-center">
      <li>
        <h3> <%= sitter.name %></h3>
      </li>

      <%  @user = User.find_by(id: sitter.user_id) %>
      <li>
        <%= image_tag(@user.avatar.medium.url, class:'sitter-avatar') %>
      </li>
      <br>
      <% end  %>

      <li>
        <% @average = Review.where(sitter_id: sitter.id).average(:rating) %>
        <% @average.to_i.times do %>
        ⭐️
        <% end %>
      </li>

      <li style="font-size: 18px">  
        <%= sitter.summary %>
      </li>
    </ul>
    
    <footer class="card text-center">
			<h2><i class="fa fa-usd" aria-hidden="true"></i> <%= sitter.price %> / night <h2>
			
			<%= link_to sitter, class: 'btn btn-default pull-center' do %>
				Details
			<% end %>
    </footer>
  </div>
</article>
