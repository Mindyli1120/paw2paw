<div class="main">
    <div class="container">
        <div class="row">
            <div class="sidebar-sitter-details">
                <div class="widget">
                    <section class="sitter-index">
                        <h5 class="widget-title font-alt"><%= @sitter.name %></h5>

                        <ul class="widget-posts">
                            <li>
                            <%  @user = User.find_by(id: @sitter.user_id) %>
                            <%= image_tag(@user.avatar, class:"sitter-avatar")%>
                            </li>
                        </ul>
                        <br>
                        <script> ReactRailsUJS.mountComponents() </script>

                        <div class="DayPicker" lang="en">
                            <%= react_component('Availability', {dates: @dates}, {prerender: true}) %>
                            <%= link_to '<button class="btn btn-border-d btn-round btn-block" type="button">Booking</button>'.html_safe, new_sitter_booking_path(@sitter.id) %>    
                        </div>

                    </section>
                </div>
            </div>
            <div class="col-sm-8 map-container">
              <div class="post-title">    
              </div>
                <div class="post-title">
                  <p><%= @sitter.summary %></p>
                  <p><%= @sitter.rules %></p>
                  <p><%= @sitter.price %></p>
                </div>
            </div>
        </div>    
    </div>
</div>
    